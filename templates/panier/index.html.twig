{% extends 'base.html.twig' %}

{% block title %}Panier Mypull{% endblock %}

{% block body %}
<section class="p-5">
    <div class="shadow-md sm:rounded-lg">
        <table class="w-full table-fixed text-sm text-left text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-2 sm:px-4 py-2 sm:py-3 text-xs sm:text-sm">Nom</th>
                    <th scope="col" class="px-2 sm:px-4 py-2 sm:py-3 text-xs sm:text-sm">Prix</th>
                    <th scope="col" class="px-2 sm:px-4 py-2 sm:py-3 text-xs sm:text-sm">Quantité</th>
                    <th scope="col" class="px-2 sm:px-8 py-2 sm:py-3 text-xs sm:text-sm">Total</th>
                    <th scope="col" class="px-2 sm:px-4 py-2 sm:py-3 text-xs sm:text-sm">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for item in data %}
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <th scope="row" class="px-2 sm:px-4 py-2 sm:py-4 font-medium text-gray-900 dark:text-white text-xs sm:text-sm">
                        {{ item.product.name }}
                    </th>
                    <td class="px-2 sm:px-4 py-2 sm:py-4 text-xs sm:text-sm">
                        {{ item.product.price }}€
                    </td>
                    <td class="px-2 sm:px-4 py-2 sm:py-4 text-xs sm:text-sm">
                        {{ item.quantity }}
                    </td>
                    <td class="px-2 sm:px-8 py-2 sm:py-4 text-xs sm:text-sm">
                        {{ item.product.price * item.quantity }}€
                    </td>
                    <td class="px-2 sm:px-4 py-2 sm:py-4 flex flex-wrap gap-1 sm:gap-2 items-start">
                        <a href="{{ path('app_addPanier', { id: item.product.id }) }}" class="text-white bg-green-700 hover:bg-green-800 font-medium rounded-lg text-xs sm:text-sm px-2 sm:px-3 py-1 sm:py-2">+</a>
                        <a href="{{ path('app_suppPanier', { id: item.product.id }) }}" class="text-white bg-yellow-400 hover:bg-yellow-500 font-medium rounded-lg text-xs sm:text-sm px-2 sm:px-3 py-1 sm:py-2">-</a>
                        <a href="{{ path('app_viderPanier', { id: item.product.id }) }}" class="text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg text-xs sm:text-sm px-2 sm:px-3 py-1 sm:py-2 ml-auto">Supprimer</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="5" class="px-2 sm:px-4 py-2 sm:py-4 font-medium text-gray-900 dark:text-white text-center text-xs sm:text-sm">
                        Panier vide
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <!-- Bouton "Vider le panier" déplacé -->
        <div class="mt-4 text-left">
            <a href="{{ path('app_trashPanier') }}" class="text-white bg-red-700 hover:bg-red-800 font-medium rounded-lg text-xs sm:text-sm px-3 py-2">Vider le panier</a>
        </div>
    </div>
</section>
{% endblock %}
